#include <stdio.h>

int main(){
    int n, start[10], size[10], i;
    printf("Enter number of files: "); scanf("%d",&n);
    for(i=0;i<n;i++){
        printf("Enter starting block and size of file %d: ",i+1);
        scanf("%d %d",&start[i],&size[i]);
    }
    printf("File Allocation Table:\nFile\tBlocks\n");
    for(i=0;i<n;i++){
        printf("F%d\t",i+1);
        for(int j=start[i];j<start[i]+size[i];j++) printf("%d ",j);
        printf("\n");
    }
    return 0;
}
