#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>

int main() {
    int fd;
    char buffer[100];
    char *text = "Hello, this is a demo of UNIX file system calls.\n";

    fd = open("demo.txt", O_CREAT | O_WRONLY, 0644);
    write(fd, text, 45);
    close(fd);

    fd = open("demo.txt", O_RDONLY);
    read(fd, buffer, sizeof(buffer));
    printf("File content: %s\n", buffer);
    close(fd);

    return 0;
}
